{
  "name": "hangman",
  "version": "0.0.1",
  "description": "hangman frontend",
  "author": "Sahand Hosseininejad",
  "license": "NONE",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./dist ./.tsc",
    "format": "prettier --config .prettierrc --write '**/*.{ts,tsx,js,jsx,json,css,scss}' '!dist/**/*' '!.*/**/*' ",
    "build": "yarn run clean && webpack --progress",
    "build-prod": "NODE_ENV=production yarn run build",
    "watch": "yarn run clean && webpack-dev-server --host 0.0.0.0 --port 3030 --watch --hot --progress",
    "watch-prod": "NODE_ENV=production yarn run watch",
    "lint": "tslint --config ./tslint.json --fix --project .",
    "get-schema": "apollo-codegen introspect-schema ../schema.graphql --output src/schema.json",
    "generate":
      "find src/app -regex '.*\\.tsx?' -exec apollo-codegen generate --schema src/schema.json --target typescript --addTypename true {} '+' | tee src/app/api.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.39",
    "@babel/polyfill": "^7.0.0-beta.39",
    "@babel/preset-env": "^7.0.0-beta.39",
    "apollo-codegen": "^0.18.3",
    "babel-loader": "^8.0.0-beta.0",
    "copy-webpack-plugin": "^4.4.1",
    "css-loader": "^0.28.9",
    "ejs-loader": "^0.3.0",
    "file-loader": "^1.1.6",
    "graphql-cli": "^2.14.0",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.7.2",
    "prettier": "^1.10.2",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.20.1",
    "ts-loader": "^3.5.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "@types/dompurify": "^0.0.31",
    "@types/graphql": "^0.12.3",
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.3",
    "@types/react-router-dom": "^4.2.3",
    "@types/showdown": "^1.7.2",
    "apollo-cache-inmemory": "^1.1.7",
    "apollo-client": "^2.2.3",
    "apollo-link-http": "^1.3.3",
    "babel-polyfill": "^6.26.0",
    "bulma": "^0.6.2",
    "dompurify": "^1.0.3",
    "graphql": "^0.13.0",
    "graphql-tag": "^2.7.3",
    "mobx": "^3.5.1",
    "mobx-react": "^4.4.1",
    "react": "^16.2.0",
    "react-apollo": "^2.0.4",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "showdown": "^1.8.6"
  }
}
